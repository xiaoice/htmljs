if locals.card
  .top-info.clearfix
    .left
      .baseinfo.module.clearfix
        .hd 
          h1 #{card.nick}
          span(style="color:#666;margin-left:10px;font-size:12px;") #{card.desc?card.desc.substr(0,30):"你还没有简介"}
          //- input(type="text",value="",name="desc")
          //- a.new-function(href="#",data-t="编辑一句话介绍，让别人了解你，会一直显示在你的昵称旁边")  
          //-   i.icon-edit
          //-   | 编辑一句话介绍
        .bd 
          
        .main-info.clearfix
          .head-pic
            img(src="#{user.head_pic}",width="80",height="80")
          .base-info
            .item 
              span #{card.city}
              |  | 
              span #{card.sex}
              |  |
              span #{card.is_dan}
            .item 
              span #{card.zhiwei}
              |  |
              span #{card.gongsi}
            .item 
              if card.blog || card.github || card.weibo
                span.sns
                  if card.blog
                    a.blog(href='#{card.blog}', target='_blank',title="博客地址") blog
                  if card.github
                    a.github(href='#{card.github}', target='_blank',title="github地址") github
                  if card.weibo
                    a.weibo(href='#{card.weibo}', target='_blank',title="微博地址") weibo
            .item 
              a#more_info(href="#") 展开更多
              if locals.card && locals.card.id == card.id
                a(href="/edit-card") 编辑
              a(href="/card/#{card.id}") 我的名片
        .my_card.hidden
          .hd 详细信息
          if locals.card
            p.line
              span.item
                span.key 姓名
                span.value #{card.name}
              span.item
                span.key 昵称
                span.value #{card.nick}
              span.item
                span.key 性别
                span.value #{card.sex}
              span.item
                span.key 感情状况
                span.value #{card.is_dan}
            p.line
              span.item
                span.key 城市
                span.value #{card.city}
              span.item
                span.key 职位
                span.value #{card.zhiwei}
              span.item
                span.key 公司
                span.value #{card.gongsi}
              span.item
                span.key 每天工作时长
                span.value #{card.shijian}
            p.line
              span.item
                span.key email
                span.value #{card.email}
              span.item
                span.key QQ
                span.value #{card.qq}
              span.item
                span.key 手机号
                span.value #{card.tel}
            p.line
              span.item
                span.key 特长
                span.value #{card.techang}
            p.line
              span.item
                span.key 介绍下自己
                span.value #{card.desc}
    .right
      .visit-info.module
        .hd 最近访问（#{locals.card&&card.visit_count||1}）
        .bd.clearfix
          div 
            if locals.visitors
              each visitor in locals.visitors
                div.visitor
                  a(href="/user/#{visitor.user_id}",title="#{visitor.user_nick}")
                    img(src="#{visitor.user_headpic}")