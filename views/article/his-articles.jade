        else
          ul.breadcrumb
            li
              a(href="/") 首页
              span.divider /
            li
              a(href="/article/") 专栏
              span.divider /
            li.active
              span #{user.nick}的原创文章
          
              
      .content
        
          ul.article-list
            each article,i in articles
              - var showA = false;
              if article.is_publish
                showA = true
              else if locals.user && locals.user.id == article.user_id
                showA = true


              if showA
                article.post(id="post-#{article.id}",class="#{i%2==1?'yooo':''} ")
                  .entry-title
                    h2.title
                      
                      //- a.t-user(href="/user/#{article.user_id}",data-original-title="#{article.user_nick}")
                      //-   img(src="#{article.user_headpic}",width="20")
                      
                      a.real-title(href='/article/#{article.id}', title='#{article.title}', rel='bookmark') #{article.title}
                      if !article.is_publish
                        span.label.tip 此文正在审核中
                  if article.desc
                    .entry-content.hidden.clearfix 
                      |!{article.desc.replace(/<[^>]*?>/g," ").substr(0,200)}
                      a(href="/article/#{article.id}")  阅读更多>>
                  .entry-foot
                    div.others
                      span.author.vcard.item
                        span.index 
                          i.icon-user
                        a.value.url.fn(rel='author', href='/user/#{article.user_id}') #{article.user_nick}
                      
                      
                      span.time.item
                        span.index 
                          i.icon-clock
                        a.value #{moment(article.publish_time*1000).fromNow()}
                        
                      if locals.user && (user.is_admin||user.id==article.user_id)
                        span.views.item
                          a.value(href="/article/#{article.id}/edit") 编辑
                      span.right-foot
                        span.views.item
                          span.index 
                            i.icon-comments
                          a.value #{article.comment_count}
                        span.views.item
                          span.index 
                            i.icon-signal
                          a.value #{article.visit_count}
          include ../page
      
    script
      $('.actions a').tooltip({
          placement:"bottom"
      })
      $('.t-user').tooltip({
          placement:"bottom"
      })
      $(".tip-trigger").tooltip({
          placement:"bottom"
      })
      $("#info_read").click(function(e){
        e.preventDefault();
        $.ajax({
          url:"/info/read",
          type:"post",
          success:function(){
          setTimeout(function(){
            window.location.href=window.location.href+"";
            },5000)
          
          }
          })
        })
